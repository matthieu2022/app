{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",  // Changé de "bundler" à "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,           // Ajouté
    "esModuleInterop": true,   // Ajouté
    "allowSyntheticDefaultImports": true,  // Ajouté
    "forceConsistentCasingInFileNames": true // Ajouté
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
